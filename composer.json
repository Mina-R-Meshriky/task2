{
    "name": "mina_meshriky/scandiweb_task",
    "license": "proprietary",
    "description": "test task by Scandiweb",
    "type": "api",
    "authors": [
        {
            "name": "Mina Meshriky",
            "email": "mina.r.meshriky@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "nunomaduro/phpinsights": "^2.7",
        "pestphp/pest": "^1.22",
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "files": [
            "app/Core/functions.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "Tests\\": "tests/"
    }
}
